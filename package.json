{
  "name": "dominican-domino",
  "version": "1.0.0",
  "description": "Dominican-style domino game for web and mobile",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server:dev": "NODE_ENV=development nodemon server/index.js",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server/index.js",
    "start:prod": "npm run build && npm run start"
  },
  "keywords": ["domino", "dominican", "game", "multiplayer"],
  "author": "Ronaldo Paulino",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "socket.io-client": "^4.6.1",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "nodemon": "^3.0.3",
    "concurrently": "^8.2.2"
  }
}
